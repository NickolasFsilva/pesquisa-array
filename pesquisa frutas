programa
{
	inclua biblioteca Texto --> t

	cadeia fruta[] = {"morango", "caju", "amora", "banana"}
	inteiro pos
    cadeia fruit
	
		
	funcao inicio()
	{
		
			escreva("Escolha uma fruta: ")
				leia(fruta)
                fruta = t.caixa_baixa(fruta)

				pos = 0 

            enquanto((pos < 3) e (fruta[pos] != fruit)) {
                pos = pos + 1

            }
            se (fruta[pos] == fruit) {
                escreva("Fruta disponivel!")
    
            }

            senao{
            
            escreva("Fruta indisponivel")
            
            }

				

		
		
	}
}
